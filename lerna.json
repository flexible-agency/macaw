{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): %s",
      "ignoreChanges": [
        "**/*.md",
        "**/*.lock",
        "**/*.test.js"
      ]
    }
  },
  "changelog": {
    "repo": "macaw-email/macaw",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  },
  "version": "1.5.0"
}
