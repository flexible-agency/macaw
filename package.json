{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": ">=4",
    "lerna": "^3.20.2",
    "lint-staged": ">=10",
    "prettier": "^1.19.1"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "lerna run test -- --coverage",
    "lint": "prettier --write \"{packages/*/src/**,example/*}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged || true"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
